import org.springframework.batch.core.Job;
import org.springframework.batch.core.JobParameters;
import org.springframework.batch.core.JobParametersBuilder;
import org.springframework.batch.core.launch.JobLauncher;
import org.springframework.stereotype.Service;

@Service
public class ReportScheduleService {

    private final JobLauncher jobLauncher;
    private final Job reportScheduleJob;

    public ReportScheduleService(JobLauncher jobLauncher, Job reportScheduleJob) {
        this.jobLauncher = jobLauncher;
        this.reportScheduleJob = reportScheduleJob;
    }

    public void executeReportSchedules(long scheduleStartTime, long scheduleEndTime) {
        try {
            JobParameters params = new JobParametersBuilder()
                    .addLong("startTime", scheduleStartTime)
                    .addLong("endTime", scheduleEndTime)
                    .addLong("timestamp", System.currentTimeMillis()) // Ensure unique job instance
                    .toJobParameters();

            jobLauncher.run(reportScheduleJob, params);
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
public static Voice initializeVoice() {
    try {
        // Dynamically load the voice directory
        Class.forName("com.sun.speech.freetts.en.us.cmu_us_kal.KevinVoiceDirectory").newInstance();
    } catch (Exception e) {
        throw new RuntimeException("Failed to load FreeTTS voice directory", e);
    }

    VoiceManager voiceManager = VoiceManager.getInstance();
    Voice voice = voiceManager.getVoice("kevin16");

    if (voice == null) {
        throw new RuntimeException("Voice not found: kevin16");
    }

    voice.allocate();
    return voice;
}
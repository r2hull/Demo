@Component
public class FreeTTSConfig {
    
    @Value("${freetts.voice-name}")
    private String voiceName;

    public String getVoiceName() {
        return voiceName;
    }
}


public static Voice initializeVoice() {
    String voiceName = freeTTSConfig.getVoiceName(); // Get correct voice name
    Voice voice = VoiceManager.getInstance().getVoice(voiceName);
    if (voice == null) {
        throw new IllegalStateException("Voice '" + voiceName + "' not found.");
    }
    voice.allocate();
    voice.setRate(130);
    voice.setPitch(100);
    voice.setVolume(1.0f);
    return voice;
}
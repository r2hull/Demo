import org.springframework.batch.core.Job;
import org.springframework.batch.core.Step;
import org.springframework.batch.core.configuration.annotation.EnableBatchProcessing;
import org.springframework.batch.core.job.builder.JobBuilder;
import org.springframework.batch.core.launch.support.RunIdIncrementer;
import org.springframework.batch.core.step.builder.StepBuilder;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

@Configuration
@EnableBatchProcessing
public class BatchConfig {

    @Bean
    public Job reportScheduleJob(JobBuilder jobBuilder, Step reportScheduleStep) {
        return jobBuilder.get("reportScheduleJob")
                .incrementer(new RunIdIncrementer())
                .flow(reportScheduleStep)
                .end()
                .build();
    }

    @Bean
    public Step reportScheduleStep(StepBuilder stepBuilder,
                                   ReportItemReader reader,
                                   ReportItemProcessor processor,
                                   ReportItemWriter writer) {
        return stepBuilder.get("reportScheduleStep")
                .<ReportScheduleManagement, ReportManagement>chunk(10) // Chunk size
                .reader(reader)
                .processor(processor)
                .writer(writer)
                .build();
    }
}
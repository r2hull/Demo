public MerchantResponse<byte[]> generateCaptcha(CaptchaRequest captchaRequest) {
    logger.info("Generating captcha for RequestId: {}", captchaRequest.getRequestId());
    
    // Step 1: Validate Captcha Request
    // captchaValidator.requestValidator(captchaRequest);

    byte[] captchaBytes = createCaptchaResponse(captchaRequest);

    return MerchantResponse.<byte[]>builder()
            .status(200)  // Assuming 200 for success
            .data(Collections.singletonList(captchaBytes)) // Wrapping byte[] inside List
            .count(1L)
            .total(1L)
            .errors(Collections.emptyList()) // Assuming no errors
            .build();
}
freetts:
  voices: "com.sun.speech.freetts.en.us.cmu_us_kal.KevinVoiceDirectory"

import org.springframework.beans.factory.annotation.Value;
import org.springframework.context.annotation.Configuration;

@Configuration
public class FreeTTSConfig {

    @Value("${freetts.voices}")
    private String voiceDirectory;

    public String getVoiceDirectory() {
        return voiceDirectory;
    }
}


import org.springframework.stereotype.Component;

@Component
public class VoiceCaptchaUtil {

    private final FreeTTSConfig freeTTSConfig;

    public VoiceCaptchaUtil(FreeTTSConfig freeTTSConfig) {
        this.freeTTSConfig = freeTTSConfig;
    }

    public void initializeVoice() {
        String voiceDirectory = freeTTSConfig.getVoiceDirectory();
        VoiceManager.getInstance().getVoice(voiceDirectory); // Use directly
    }
}
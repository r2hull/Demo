@Test
void testSearchAndGetReportManagement() {
    // Arrange
    Pageable pageable = PageRequest.of(0, 10);
    UUID reportId = UUID.randomUUID();

    ReportManagementRequest reportManagementRequest = new ReportManagementRequest();
    reportManagementRequest.setReport("ORDER");
    reportManagementRequest.setMId("MID001");
    reportManagementRequest.setFormat(ReportFormat.CSV);
    reportManagementRequest.setDurationFromDate(1640995200000L);
    reportManagementRequest.setDurationToDate(1737225600000L);

    ReportManagement reportManagement = new ReportManagement();
    reportManagement.setId(UUID.randomUUID());
    reportManagement.setMId("MID001");
    reportManagement.setReportId(reportId);
    reportManagement.setFormat(ReportFormat.CSV);
    reportManagement.setDurationFromDate(1640995200000L);
    reportManagement.setDurationToDate(1737225600000L);

    List<ReportManagement> reportManagementList = List.of(reportManagement);
    Page<ReportManagement> reportManagementPage = new PageImpl<>(reportManagementList, pageable, reportManagementList.size());

    when(reportMasterDao.getReportIdByName(reportManagementRequest.getReport())).thenReturn(reportId);
    when(reportManagementRepository.findAll(any(Specification.class), eq(pageable))).thenReturn(reportManagementPage);
    when(reportService.convertEntityToDTO(any())).thenReturn(new ReportManagementDto());

    // Act
    Page<ReportManagementDto> result = reportService.searchAndGetReportManagement(reportManagementRequest, pageable);

    // Assert
    assertNotNull(result);
    assertEquals(1, result.getContent().size());
    verify(reportMasterDao).getReportIdByName(reportManagementRequest.getReport());
    verify(reportManagementRepository).findAll(any(Specification.class), eq(pageable));
}
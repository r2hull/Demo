@BeforeEach
void init() {
    // clean security context before each test
    SecurityContextHolder.clearContext();
}

@AfterEach
void tearDown() {
    // clean security context after each test
    SecurityContextHolder.clearContext();
}

@AfterEach
void resetMocks() {
    SecurityContextHolder.clearContext();
    Mockito.framework().clearInlineMocks(); // clears inline + static mocks
}
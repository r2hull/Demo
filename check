@Component
@RequiredArgsConstructor
public class TransactionDataSyncDao {

    private final TransactionDataSyncRepository transactionDataSyncRepository;

    public void saveMerchantOrder (){
        transactionDataSyncRepository.saveMerchantOrder();
    }

}

@Repository
@RequiredArgsConstructor
public class TransactionDataSyncRepository {
    private final NamedParameterJdbcTemplate jdbcTemplate;
    private final LoggerUtility log = LoggerFactoryUtility.getLogger(this.getClass());

    public void saveMerchantOrder() {
        try {
            int insertCount = jdbcTemplate.update(JdbcQuery.INSERT_MERCHANT_ORDERS, new HashMap<>());
            log.info("Inserted {} records into MERCHANT_ORDERS", insertCount);
        } catch (Exception ex) {
            log.error("Error during bulk insert to MERCHANT_ORDERS", ex);
        }
    }
}

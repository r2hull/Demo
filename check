 @KafkaListener(topics = "${spring.kafka.topic.transaction.bulkRefund}")
    public void processBulkRefundMessage(ConsumerRecord<String, String> consumerRecord) {
        log.info("Received Kafka message: {}", consumerRecord);

        try {
            BulkRefundBooking transactionEmailDto = objectMapper.readValue(consumerRecord.value(), BulkRefundBooking.class);
                    refundService.processBulkRefund(transactionEmailDto.getBulkId(), transactionEmailDto.getMerchantId());
        } catch (TransactionException e) {
            log.error("Error during bulk refund kafka listening message[key:{} and value: {}], error: {}", consumerRecord.key(), consumerRecord.value(), e.getErrorMessage());
        } catch (Exception e) {
            log.error("Error during bulk refund kafka listening message[key:{} and value: {}], error: {}", consumerRecord.key(), consumerRecord.value(), e.getMessage());
        }
    }

public Page<MerchantUser> getAllMerchantUsersByMId(String mid, Pageable pageable) {
    int page = pageable.getPageNumber();
    int size = pageable.getPageSize();

    int startRow = page * size;
    int endRow = startRow + size;

    List<MerchantUser> users = merchantUserRepository.findByMidManual(mid, startRow, endRow);
    long total = merchantUserRepository.countByMid(mid);

    return new PageImpl<>(users, pageable, total);
}
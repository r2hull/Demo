SELECT mop.atrn_num, mop.sbi_order_ref_number, mo.sbi_order_ref_number, mop.merchant_id
FROM merchant_order_payments mop
LEFT JOIN merchant_orders mo ON mop.sbi_order_ref_number = mo.sbi_order_ref_number
WHERE mo.sbi_order_ref_number = 'YOUR_SBI_ORDER_REF_NUMBER'
  AND mop.merchant_id = 'YOUR_MERCHANT_ID';
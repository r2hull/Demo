private static ChannelSftp setupJsch() throws JSchException {
    JSch jsch = new JSch();
    Session session = jsch.getSession(USERNAME, REMOTE_HOST, PORT);
    session.setPassword(PASSWORD);

    // Relaxed configuration
    java.util.Properties config = new java.util.Properties();
    config.put("StrictHostKeyChecking", "no");
    config.put("PreferredAuthentications", "password");
    config.put("kex", "diffie-hellman-group1-sha1,diffie-hellman-group14-sha1");
    config.put("cipher.s2c", "aes128-cbc,aes128-ctr");
    config.put("cipher.c2s", "aes128-cbc,aes128-ctr");
    config.put("mac.s2c", "hmac-sha1");
    config.put("mac.c2s", "hmac-sha1");
    session.setConfig(config);

    session.connect(5000); // 5s timeout
    return (ChannelSftp) session.openChannel("sftp");
}
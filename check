return (Root<Product> productRoot, CriteriaQuery<?> query, CriteriaBuilder criteriaBuilder) -> {
            // Add a second Root for the unrelated entity.
            Root<AuditLog> auditLogRoot = query.from(AuditLog.class);
            // Define the join condition in the WHERE clause.
            Predicate joinCondition = criteriaBuilder.equal(
                productRoot.get("productCode"),
                auditLogRoot.get("productCode")
            );
            // Combine the join condition with other predicates if needed.
            return criteriaBuilder.and(joinCondition);
        };

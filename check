@AllArgsConstructor
public class UserValidationRequest {
    @NotBlank(message = "requestType is mandatory")
    @Schema(name = "requestType", example = "LOGIN")
    private String requestType;

    @NotBlank(message = "userName is mandatory")
    @Schema(name = "userName", example = "user5")
    private String userName;

    @NotNull(message = "reqId is mandatory")
    @Schema(name = "reqId", example = "123456789")
    @Min(value = 1, message = "reqId must be greater than 0")
    private Long reqId;

    @NotEmpty(message = "assignedMIds list cannot be empty")
    @Size(min = 1, message = "At least one assignedMId is required")
    private List<@NotBlank(message = "assignedMId cannot be blank") String> assignedMIds;
}
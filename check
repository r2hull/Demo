@GetMapping("/notices/{mid}")
public List<Helpsupport> getImportantNoticesByMid(@PathVariable String mid) {
    List<Helpsupport> allNotices = helpsupportRepository.findByType("IMPORTANT_NOTICE");

    return allNotices.stream()
        .sorted(Comparator.comparingInt(h -> {
            if (mid.equals(h.getMid())) return 1;
            if (h.getMid() != null && !mid.equals(h.getMid())) return 2;
            return 3; // MID is null
        }))
        .collect(Collectors.toList());
}

CREATE TABLE RECON_FILE_DTLS(
    RFD_ID                RAW(16) DEFAULT SYS_GUID() PRIMARY KEY,
    RFS_ID                RAW(16),
    MERCHANT_ID           VARCHAR2(10),
    ROW_NUMBER            NUMBER,
    RECORD_TYPE           VARCHAR2(100),
    ATRN_NUM              VARCHAR2(30),
    PAYMENT_AMOUNT        NUMBER(20, 2),
    PAYMENT_DATE          DATE,
    BANK_REF_NUMBER       VARCHAR2(30),
    PAYMENT_STATUS        VARCHAR2(20),
    RECON_STATUS          VARCHAR2(10) DEFAULT 'PENDING' CHECK (RECON_STATUS IN ('PENDING','MATCHED','UNMATCHED','DUPLICATE','SUCCESS','FAIL')) ENABLE,
    SETTLEMENT_STATUS     VARCHAR2(10) DEFAULT 'PENDING' CHECK (SETTLEMENT_STATUS IN ('TO_BE_SETTLED','SETTLED','PENDING','IN_PROCESS','SUCCESS','FAIL')) ENABLE,
    PAYOUT_STATUS         VARCHAR2(10) DEFAULT 'PENDING' CHECK (PAYOUT_STATUS IN ('PENDING','IN_PROCESS','SUCCESS','FAIL')) ENABLE,
    REMARK	              VARCHAR(500),
    CREATED_DATE      NUMBER NOT NULL ENABLE,
    CREATED_BY        VARCHAR2(100 BYTE) NOT NULL ENABLE,
    UPDATED_DATE      NUMBER,
    UPDATED_BY        VARCHAR2(100 BYTE)
    );


CREATE INDEX RFD_RFS_ID_IDX ON RECON_FILE_DTLS (RFS_ID) ;
CREATE INDEX IDX_RECON_ATRN ON RECON_FILE_DTLS (ATRN_NUM) ;
CREATE INDEX RECON_FILE_DTLS_RFD_ID_IDX ON RECON_FILE_DTLS(HEXTORAW(RFD_ID));





CREATE TABLE MERCHANT_TXN_MULTI_ACC_PAYOUT(
    MTMAP_ID               RAW(16) DEFAULT SYS_GUID() PRIMARY KEY,
    RFS_ID                 RAW(16),
    ATRN_NUM               VARCHAR2(20),
    RFD_ID                 RAW(16),
    MERCHANT_ID            VARCHAR2(10),
    MERCHANT_ACC_PAYOUT    NUMBER(20, 2),
    BANK_ID                VARCHAR2(50),
    BANK_IFSC_CODE         VARCHAR2(20),
    BANK_ACC_NUMBER        VARCHAR2(50),
    REMARK	               VARCHAR2(500),
    PAYOUT_ID              RAW(16),
    CREATED_DATE      NUMBER NOT NULL ENABLE,
    CREATED_BY        VARCHAR2(100 BYTE) NOT NULL ENABLE,
    UPDATED_DATE      NUMBER,
    UPDATED_BY        VARCHAR2(100 BYTE)
    );

 CREATE INDEX MTMAP_RFS_ID_IDX ON MERCHANT_TXN_MULTI_ACC_PAYOUT (RFS_ID) ;
 CREATE INDEX MTMAP_MERCHANT_ID_IDX ON MERCHANT_TXN_MULTI_ACC_PAYOUT (MERCHANT_ID) ;

@Repository
public interface MerchantOrderPaymentRepository
        extends JpaRepository<MerchantOrderPayment, String> {

    @Query("""
        SELECT mop.sbiOrderRefNumber
        FROM MerchantOrderPayment mop
        WHERE mop.atrnNumber = :atrn
    """)
    String findSbiOrderRefByAtrn(@Param("atrn") String atrn);
}


@Repository
public interface MerchantOrderAccountInfoRepository
        extends JpaRepository<MerchantOrderAccountInfo, UUID> {

    List<MerchantOrderAccountInfo> findBySbiOrderRefNumber(
            String sbiOrderRefNumber
    );
}
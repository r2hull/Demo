@Transactional
public void saveRefundAccounts(RefundBookRequest request, RefundResponse response, UUID payoutId) {
    List<RefundAccountInfo> accounts = request.getMultiAccount().stream()
            .map(dto -> RefundAccountInfo.builder()
                    .arrnNum(response.getAtrnNumber())
                    .accountHeader(dto.getAccountIdentifier())
                    .amount(dto.getAmount())
                    .payoutId(payoutId)
                    .build())
            .collect(Collectors.toList());

    refundAccountInfoRepository.saveAll(accounts);
}
@Service
@RequiredArgsConstructor
public class MasterService {

    private final ListOfMasterRepository masterRepository;
    private final ListOfValueRepository valueRepository;

    public List<ListOfValue> getValuesByMasterName(String masterName) {
        ListOfMaster master = masterRepository.findByMasterNameAndActive(masterName, 1L)
                .orElseThrow(() -> new ResourceNotFoundException("Master not found: " + masterName));

        return valueRepository.findByMasterIdAndActive(master.getId(), 1L);
    }
}
@Entity
@Table(name = "MASTER_DATA")
public class MasterData extends AuditEntity {
    @Id
    @GeneratedValue(strategy = GenerationType.UUID)
    private UUID id;
    @Enumerated(EnumType.STRING)
    private MasterCode masterCode;
    private String name;
    private String code;
    @Enumerated(EnumType.STRING)
    private MasterCode parentCode;
    private long active;
}


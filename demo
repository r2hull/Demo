@Entity
@Table(name = "MASTER_DATA")
public class MasterData extends AuditEntity {
    @Id
    @GeneratedValue(strategy = GenerationType.UUID)
    private UUID id;
    @Enumerated(EnumType.STRING)
    private MasterCode masterCode;
    private String name;
    private String code;
    @Enumerated(EnumType.STRING)
    private MasterCode parentCode;
    private long active;
}
-- CREATE VALUE TABLE
CREATE TABLE MASTER_DATA (
    ID RAW(16) DEFAULT SYS_GUID() NOT NULL ENABLE,
    MASTER_CODE     VARCHAR2(100),
    PARENT_CODE     VARCHAR2(100),
    NAME            VARCHAR2(200) NOT NULL,
    CODE            VARCHAR2(50) NOT NULL,
    DESCRIPTION     VARCHAR2(500),
    CREATED_BY      VARCHAR2(100) NOT NULL,
   	CREATED_AT      NUMBER NOT NULL,
   	UPDATED_BY      VARCHAR2(100) NOT NULL,
   	UPDATED_AT      NUMBER NOT NULL,
    ACTIVE          NUMBER(1) DEFAULT 1,
    CONSTRAINT PK_MASTER_DATA PRIMARY KEY (ID),
    CONSTRAINT UK_MASTER_DATA_CODE UNIQUE (CODE)
);

CREATE INDEX IDX_PARENT_CODE ON MASTER_DATA(PARENT_CODE);
CREATE INDEX IDX_MASTER_CODE ON MASTER_DATA(MASTER_CODE);



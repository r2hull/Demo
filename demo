
@Data
@Entity
@Table(name = "TOKEN_MANAGEMENT")
@Builder
@EqualsAndHashCode(callSuper = true)
@AllArgsConstructor
@NoArgsConstructor
public class TokenManagement extends AuditEntity {

    @Id
    @GeneratedValue(strategy = GenerationType.UUID)
    private UUID id;
    private String userName;
    private String phoneNumber;
    private String tokenType;
    private String token;
    @Schema(description = "Token expiry time (epoch time)", example = "1704067200000")
    private Long tokenExpiryTime;
    @Schema(description = "Token is GENERATED/EXPIRED/INVALIDATED")
    @Enumerated(EnumType.STRING)
    private TokenStatus tokenStatus;
    private boolean isActive;
    private int requestCount;

}
